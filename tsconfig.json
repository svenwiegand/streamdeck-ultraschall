{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,

    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "common/*": ["src/common/*"],
      "streamdeck/*": ["src/streamdeck/*"]
    }
  }
}
